# Seoul Fit Backend - 운영환경 설정 예제
# 
# 운영 환경 배포 시 사용할 환경변수 설정
# 실제 운영에서는 보안이 강화된 시크릿 관리 시스템 사용 권장

# =============================================================================
# 운영환경 설정
# =============================================================================
SPRING_PROFILES_ACTIVE=production

# =============================================================================
# 데이터베이스 설정 (운영)
# =============================================================================
# PostgreSQL 예제
DATABASE_URL=jdbc:postgresql://localhost:5432/seoul_fit
DATABASE_USERNAME=seoul_fit_user
DATABASE_PASSWORD=production-strong-password

# H2 콘솔 비활성화 (보안)
H2_CONSOLE_ENABLED=false

# =============================================================================
# JPA 설정 (운영)
# =============================================================================
JPA_DDL_AUTO=validate
JPA_FORMAT_SQL=false
JPA_SHOW_SQL=false
JPA_DEFER_INIT=false

# =============================================================================
# 서울시 공공데이터 API
# =============================================================================
SEOUL_API_KEY=production-seoul-api-key

# =============================================================================
# OAuth 설정 (운영)
# =============================================================================
KAKAO_CLIENT_ID=production-kakao-client-id
KAKAO_CLIENT_SECRET=production-kakao-client-secret
KAKAO_REDIRECT_URI=https://your-domain.com/login/oauth2/code/kakao

GOOGLE_CLIENT_ID=production-google-client-id
GOOGLE_CLIENT_SECRET=production-google-client-secret
GOOGLE_REDIRECT_URI=https://your-domain.com/login/oauth2/code/google
GOOGLE_API_KEY=production-google-api-key

NAVER_CLIENT_ID=production-naver-client-id
NAVER_CLIENT_SECRET=production-naver-client-secret
NAVER_REDIRECT_URI=https://your-domain.com/login/oauth2/code/naver

# =============================================================================
# JWT 설정 (운영)
# =============================================================================
# 강력한 보안 키 - 최소 512비트 권장
JWT_SECRET=production-super-secure-secret-key-with-at-least-512-bits-for-maximum-security
JWT_ACCESS_EXPIRY=1800
JWT_REFRESH_EXPIRY=1209600

# =============================================================================
# 운영 환경 설정
# =============================================================================
LOG_LEVEL=INFO
SCHEDULER_ENABLED=true

# Actuator 보안 설정 (운영에서는 제한적으로 노출)
ACTUATOR_ENDPOINTS=health,info
ACTUATOR_HEALTH_DETAILS=when-authorized
ACTUATOR_SCHEDULED_TASKS=false

# =============================================================================
# 성능 및 모니터링 설정
# =============================================================================
# 데이터베이스 커넥션 풀 설정
HIKARI_MAXIMUM_POOL_SIZE=20
HIKARI_MINIMUM_IDLE=5
HIKARI_CONNECTION_TIMEOUT=20000

# JVM 메모리 설정 (Docker/K8s에서 설정)
# JAVA_OPTS=-Xms512m -Xmx2g -XX:+UseG1GC