# Seoul Fit Backend - 로컬 개발환경 설정
# 
# 로컬 개발 시 사용할 환경변수 설정
# cp .env.local.example .env.local

# =============================================================================
# 로컬 개발환경 설정
# =============================================================================
SPRING_PROFILES_ACTIVE=local

# =============================================================================
# 데이터베이스 설정 (로컬)
# =============================================================================
DATABASE_URL=jdbc:h2:mem:seoul_fit
DATABASE_USERNAME=hkjin
DATABASE_PASSWORD=1234
H2_CONSOLE_ENABLED=true

# =============================================================================
# JPA 설정 (로컬)
# =============================================================================
JPA_DDL_AUTO=create
JPA_FORMAT_SQL=true
JPA_SHOW_SQL=true
JPA_DEFER_INIT=true

# =============================================================================
# 서울시 공공데이터 API
# =============================================================================
SEOUL_API_KEY=your-seoul-api-key-here

# =============================================================================
# OAuth 설정 (로컬)
# =============================================================================
KAKAO_CLIENT_ID=your-kakao-client-id
KAKAO_CLIENT_SECRET=your-kakao-client-secret
KAKAO_REDIRECT_URI=http://localhost:8080/login/oauth2/code/kakao

GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8080/login/oauth2/code/google
GOOGLE_API_KEY=your-google-api-key

NAVER_CLIENT_ID=your-naver-client-id
NAVER_CLIENT_SECRET=your-naver-client-secret
NAVER_REDIRECT_URI=http://localhost:8080/login/oauth2/code/naver

# =============================================================================
# JWT 설정
# =============================================================================
JWT_SECRET=local-development-secret-key-for-testing-only-not-for-production-use
JWT_ACCESS_EXPIRY=3600
JWT_REFRESH_EXPIRY=604800

# =============================================================================
# 로컬 개발 설정
# =============================================================================
LOG_LEVEL=DEBUG
SCHEDULER_ENABLED=true
ACTUATOR_ENDPOINTS=health,info,metrics,scheduledtasks,beans
ACTUATOR_HEALTH_DETAILS=always
ACTUATOR_SCHEDULED_TASKS=true