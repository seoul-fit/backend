            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/users/me?oauthUserId=123&oauthProvider=KAKAO",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "me"],
              "query": [
                {
                  "key": "oauthUserId",
                  "value": "123"
