{
  "info": {
    "name": "UrbanPing API Collection",
    "description": "서울시 공공 데이터를 활용한 실시간 도시 정보 알림 시스템 API",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "user_id",
      "value": "1",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "OAuth Authorization Check",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"provider\": \"KAKAO\",\n  \"authorizationCode\": \"your-authorization-code\",\n  \"redirectUri\": \"http://localhost:3000/auth/callback\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/oauth/authorizecheck",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "oauth", "authorizecheck"]
            }
          }
        },
        {
          "name": "OAuth Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"provider\": \"KAKAO\",\n  \"authorizationCode\": \"your-authorization-code\",\n  \"redirectUri\": \"http://localhost:3000/auth/callback\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/oauth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "oauth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('jwt_token', response.data.accessToken);",
                  "    pm.collectionVariables.set('user_id', response.data.userId);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{base_url}}/api/auth/refresh?refreshToken={{refresh_token}}",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "refresh"],
              "query": [
                {
                  "key": "refreshToken",
                  "value": "{{refresh_token}}"
                }
              ]
            }
          }
        }
      ]
    },
    {
